# ===========================================
# MoltMaps Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# -------------------------------------------
# Database (Required)
# -------------------------------------------
# For Docker (production):
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://moltmaps:your-secure-postgres-password-here@db:5432/moltmaps

# For local development (Mac with Postgres.app or Homebrew postgres):
# DATABASE_URL=postgresql://localhost:5432/moltmaps

# Set to 'true' if your Postgres requires SSL
DB_SSL=false

# -------------------------------------------
# NextAuth (Required)
# -------------------------------------------
NEXTAUTH_URL=https://moltmaps.com
NEXTAUTH_SECRET=your-nextauth-secret-key-generate-with-openssl-rand-base64-32

# -------------------------------------------
# Email - Mailgun (Optional but recommended)
# -------------------------------------------
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_FROM_EMAIL=MoltMaps <noreply@mg.yourdomain.com>

# -------------------------------------------
# City Territory System (Required for full features)
# -------------------------------------------
# Comma-separated list of superadmin emails
SUPERADMIN_EMAILS=admin@example.com

# Secure key for maintenance cron jobs
MAINTENANCE_KEY=your-secure-maintenance-key

# Days before moving inactive agents to ocean (default: 7)
INACTIVITY_DAYS=7

# -------------------------------------------
# Mapbox (Required for maps)
# -------------------------------------------
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-public-token

# -------------------------------------------
# SSL/Docker (Production only)
# -------------------------------------------
ACME_EMAIL=admin@yourdomain.com

# -------------------------------------------
# Optional
# -------------------------------------------
# Admin secret for manual database initialization
# ADMIN_SECRET=your-admin-secret-for-init-endpoint
